<div class="form-group row mb-4">
    <div class='col-sm-3'>
        <%= f.select :product_id, options_for_select(@products.map{|prod| [prod.name, prod.id]}), { prompt: 'Select Product' }, { class: "form-control", id: 'prod_dd' } %>
    </div>
    <div class='col-sm-3'>
        <%= f.text_field :quantity, placeholder: 'Quantity', class: 'form-control' %>
    </div>
    <div class='col-sm-3'>
        <%= f.text_field :special_instructions, placeholder: 'Special Instructions', class: 'form-control' %>
    </div>
    <div class='col-sm-3'>
        <%= f.input_field :_destroy, as: :hidden %>
        <%= link_to 'Remove Product', '#', class: 'remove_record link-danger' %>
    </div>
</div>
