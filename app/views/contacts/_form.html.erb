<div class="container">
  <%= form_with(model: [@company, @site, contact], local: true) do |form| %>
    <% if contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
          <% contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row mb-4">
      <%= form.label :title, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :first_name, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :last_name, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :number, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :street_address1, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :street_address1, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :street_address2, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :street_address2, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :town, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :town, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :post_code, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :post_code, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :email, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :phone_number, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :head_office, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :head_office, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :buyer, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :buyer, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :invoice, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :invoice, class: 'form-control' %>
      </div>
    </div>

    <%= form.hidden_field :company_id, :value => @company.id %>
    <%= form.hidden_field :site_id, :value => @site.id %>
    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>