<h1>Contacts</h1>
<div class="table-responsive">

  <table class="table table-bordered w-auto table-hover">
  <thead>
    <tr>
        <th>Title</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Number</th>
        <th>Street address1</th>
        <th>Street address2</th>
        <th>Town</th>
        <th>Post code string</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Head office</th>
        <th>Buyer</th>
        <th>Invoice</th>
        <% if can_edit %>
            <th>Site</th>
            <th colspan="3"></th>
        <% end  %>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.title %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.number %></td>
        <td><%= contact.street_address1 %></td>
        <td><%= contact.street_address2 %></td>
        <td><%= contact.town %></td>
        <td><%= contact.post_code_string %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.head_office %></td>
        <td><%= contact.buyer %></td>
        <td><%= contact.invoice %></td>
        <% if can_edit %>
            <td><%= link_to contact.site.name, company_site_path(@company, @site) %></td>
            <td><%= link_to 'Show', company_site_contact_path(@company, @site, contact) %></td>
            <td><%= link_to 'Edit', edit_company_site_contact_path(@company, @site, contact) %></td>
            <td><%= link_to 'Delete', company_site_contact_path(@company, @site, contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>

</div>