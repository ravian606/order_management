<div class="container">
  <%= form_with(model: [@company, site], local: true) do |form| %>
    <% if site.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

        <ul>
          <% site.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row mb-4">
      <%= form.label :name, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :number, class: 'col-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :street_address_one, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :street_address_one, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :street_address_two, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :street_address_two, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :town, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :town, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :post_code, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :post_code, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :head_office, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :head_office, class: 'form-control', value: @company.head_office %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :invoice_address, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :invoice_address, class: 'form-control', value: @company.invoice_address %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :contact, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :contact, class: 'form-control', value: @company.contact %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :invoice_email, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :invoice_email, class: 'form-control', value: @company.invoice_email %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :phone_number, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :phone_number, class: 'form-control', value: @company.number %>
      </div>
    </div>

    <div class="form-group row mb-4">
      <%= form.label :payment_method, class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= form.text_field :payment_method, class: 'form-control', value: @company.payment_method %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-primary mb-2" %>
    </div>
  <% end %>
</div>
