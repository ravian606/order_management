<h1>Sites</h1>
<div>
  <table class="table table-bordered w-auto">
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Street address one</th>
        <th>Street address two</th>
        <th>Town</th>
        <th>Post code</th>
        <th>Head office</th>
        <th>Invoice address</th>
        <th>Contact</th>
        <th>Invoice email</th>
        <th>Invoice</th>
        <th>Payment method</th>
        <% if can_edit_site %>
            <th colspan="2"></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="table table-bordered">
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.number %></td>
          <td><%= site.street_address_one %></td>
          <td><%= site.street_address_two %></td>
          <td><%= site.town %></td>
          <td><%= site.post_code %></td>
          <td><%= site.head_office %></td>
          <td><%= site.invoice_address %></td>
          <td><%= site.contact %></td>
          <td><%= site.invoice_email %></td>
          <td><%= site.phone_number %></td>
          <td><%= site.payment_method %></td>
          <% if can_edit_site %>
            <td><%= link_to 'Show', company_site_path(@company, site) %></td>
            <td><%= link_to 'Edit', edit_company_site_path(@company, site) %></td>
            <% link_to 'Delete', company_site_path(@company, site), method: :delete, data: { confirm: 'Are you sure?' } %>
            <td><%= link_to 'Add Contact', new_company_site_contact_path(@company, site) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>