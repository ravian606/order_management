<p id="notice"><%= notice %></p>

<h1>Sites</h1>
<div class="table-responsive">
  <table class="table table-ordered w-auto">
    <thead>
      <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Street address one</th>
        <th>Street address two</th>
        <th>Town</th>
        <th>Post code</th>
        <th>Head office</th>
        <th>Invoice address</th>
        <th>Contact</th>
        <th>Invoice email</th>
        <th>Invoice</th>
        <th>Payment method</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table table-bordered">
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.number %></td>
          <td><%= site.street_address_one %></td>
          <td><%= site.street_address_two %></td>
          <td><%= site.town %></td>
          <td><%= site.post_code %></td>
          <td><%= site.head_office %></td>
          <td><%= site.invoice_address %></td>
          <td><%= site.contact %></td>
          <td><%= site.invoice_email %></td>
          <td><%= site.invoice %></td>
          <td><%= site.payment_method %></td>
          <td><%= link_to 'Show', site %></td>
          <td><%= link_to 'Edit', edit_site_path(site) %></td>
          <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

